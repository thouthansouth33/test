<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

 <struts>
          <constant name="struts.devMode" value="true"/>
          <package name="com.internousdev.tempa.action" extends="struts-default">


              <action name="HomeAction" class="com.internousdev.tempa.action.HomeAction" method="execute">
                 <result name="success">login.jsp</result>
             </action>
             <action name="LoginAction" class="com.internousdev.tempa.action.LoginAction" method ="execute">
                 <result name="success">buyItem.jsp</result>
                 <result name="error">home.jsp</result>
             </action>
             <action name="UserCreateAction" class="com.internousdev.tempa.action.UserCreateAction" method="execute">
                 <result name="success">userCreate.jsp</result>
             </action>
             <action name="UserCreateConfirmAction" class="com.internousdev.tempa.action.UserCreateConfirmAction" method="execute">
                 <result name="success">userCreateConfirm.jsp</result>
                 <result name="error">userCreate.jsp</result>
             </action>
             <action name="UserCreateCompleteAction" class="com.internousdev.tempa.action.UserCreateCompleteAction" method="execute">
                 <result name="success">userCreateComplete.jsp</result>
             </action>
             <action name="BuyItemAction" class="com.internousdev.tempa.action.BuyItemAction" method="execute">
                 <result name="success">buyItemConfirm.jsp</result>
             </action>
             <action name="BuyItemConfirmAction" class="com.internousdev.tempa.action.BuyItemConfirmAction" method="execute">
                 <result name="success">buyItemComplete.jsp</result>
             </action>
             <action name="MyPageAction" class="com.internousdev.tempa.action.MyPageAction" method="execute">
                 <result name="success">myPage.jsp</result>
             </action>

           </package>
</struts>